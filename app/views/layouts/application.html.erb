<!DOCTYPE html>
<html>
<head>
  <title>School_MNG</title>
  <%= stylesheet_link_tag    "application", "facebox",  :media => "all" %>
  <%= javascript_include_tag "application", "jquery", "facebox" %>
   <%= csrf_meta_tags %>

</head>
<body style="background-color:#ffaaaf;">
     <% if current_user %>
      
      <div style="padding-top:10px">
      <div style="float:right;padding-right:10px;">
       <%= form_tag users_path, :method => 'get' do -%>  
       
       <%= current_user.name %>
          &nbsp;&nbsp;
          <%= link_to t('.Log Out'), log_out_path ,:class => 'btn btn-mini btn-danger', id: "sign_out"  %>
          &nbsp;&nbsp;
          
        <% end %>
      </div>
    </div>
      <div  style="padding-top:10px;padding-bottom:10px;padding-left:10px;">
      </div>
      <div id='cssmenu'>
         
    </div>
    <% end %>


<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %> 


<%= yield %>

</body>
</html>